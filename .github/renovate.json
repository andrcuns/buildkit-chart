{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platform": "github",
  "onboarding": false,
  "repositories": [
    "andrcuns/charts"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "labels": [
    "dependencies"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".github/script/utils.sh"
      ],
      "matchStrings": [
        "KUBECONFORM_VERSION=\"(?<currentValue>.*?)\"\\n"
      ],
      "depNameTemplate": "yannh/kubeconform",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": [
        ".github/script/utils.sh"
      ],
      "matchStrings": [
        "HELMDOCS_VERSION=\"(?<currentValue>.*?)\"\\n"
      ],
      "depNameTemplate": "norwoodj/helm-docs",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "charts/buildkit-service/Chart.yaml"
      ],
      "matchStrings": [
        "appVersion: (?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "moby/buildkit",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchFiles": [
        "charts/buildkit-service/Chart.yaml"
      ],
      "labels": ["dependencies", "buildkit-service"]
    }
  ]
}
